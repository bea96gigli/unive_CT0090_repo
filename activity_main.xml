<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2E2E"
        android:padding="30dp">

        <!-- Logo a sinistra -->
        <ImageView
            android:id="@+id/logoLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Titolo al centro -->
        <TextView
            android:id="@+id/toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FILL 𝓔 DRIVE"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <!-- Logo a destra -->
        <ImageView
            android:id="@+id/logoRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carburante"
        android:layout_width="399dp"
        android:layout_height="280dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        android:background="#CCCCCC"
        android:padding="10dp"
        tools:ignore="UnknownId">

        <!-- Scritta in alto al centro -->
        <TextView
            android:id="@+id/labelRectangle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scelta carburante"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <!-- Label e switch -->
        <LinearLayout
            android:id="@+id/fuelContainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/labelRectangle1">

            <!-- Label e switch 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFF">


                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:paddingBottom="5dp"
                    android:paddingStart = "12dp"
                    android:paddingTop = "5dp"
                    android:layout_weight="2"
                    android:background="#FFFF"
                    android:text="Benzina"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/Benzina"
                    android:layout_width="65dp"
                    android:layout_height="41dp"
                    tools:ignore="TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFF">


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="2"
                    android:background="#FFFF"
                    android:paddingStart="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Diesel"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/Diesel"
                    android:layout_width="65dp"
                    android:layout_height="41dp"
                    android:layout_weight="2"
                    tools:ignore="TouchTargetSizeCheck" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFF">


                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="2"
                    android:background="#FFFF"
                    android:paddingStart="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="GPL"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/GPL"
                    android:layout_width="65dp"
                    android:layout_height="41dp"
                    android:layout_weight="2"
                    tools:ignore="TouchTargetSizeCheck" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFF">


                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:paddingBottom="5dp"
                    android:paddingStart = "12dp"
                    android:paddingTop = "5dp"
                    android:layout_weight="2"
                    android:background="#FFFF"
                    android:text="Metano"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/Metano"
                    android:layout_width="65dp"
                    android:layout_height="41dp"
                    android:layout_weight="2"
                    tools:ignore="TouchTargetSizeCheck" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carburante"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        android:background="#CCCCCC"
        android:padding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="90dp"
            android:background="#FFFF">


            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:paddingBottom="5dp"
                android:paddingStart = "12dp"
                android:paddingTop = "5dp"
                android:layout_weight="2"
                android:background="#FFFF"
                android:text="Self-service"

                android:textColor="#000000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/Self-service"
                android:layout_width="65dp"
                android:layout_height="41dp"
                tools:ignore="TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml" />


        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        >

        <Button
            android:id="@+id/cercaButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/cerca"
            android:textSize="30sp" />

    </RelativeLayout>


</RelativeLayout>


